{
  "name": "@folio/remote-sync",
  "version": "1.1.0",
  "description": "FOLIO app for Remote System Sync",
  "main": "src/index.js",
  "repository": "folio-org/mod-remote-sync",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "lint": "eslint .",
    "test": "yarn run test:unit",
    "test:unit": "jest --ci --coverage && yarn run test:unit:report",
    "test:unit:report": "cp -r ./artifacts/coverage-jest ./artifacts/coverage"
  },
  "stripes": {
    "actsAs": [
      "app",
      "handler",
      "settings"
    ],
    "displayName": "ui-remote-sync.meta.title",
    "handlerName": "eventHandler",
    "route": "/remote-sync",
    "home": "/remote-sync",
    "hasSettings": true,
    "queryResource": "query",
    "okapiInterfaces": {
      "remote-sync": "1.0"
    },
    "stripesDeps": [
      "@folio/stripes-erm-components",
      "@k-int/stripes-kint-components"
    ],
    "icons": [
      {
        "name": "app",
        "alt": "FOLIO app for remote sync",
        "title": "Remote Sync"
      }
    ],
    "permissionSets": [
      {
        "permissionName": "module.remote-sync.enabled",
        "displayName": "UI: ui-remote-sync module is enabled"
      },
      {
        "permissionName": "settings.remote-sync.enabled",
        "displayName": "Settings (remote-sync): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ]
      }
    ]
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^6.0.0",
    "@folio/stripes": "^7.0.0",
    "@folio/stripes-cli": "^2.3.0",
    "@testing-library/dom": "^7.26.6",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.2.2",
    "babel-eslint": "^10.0.0",
    "babel-polyfill": "6.26.0",
    "chai": "^4.2.0",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^3.10.0",
    "faker": "^4.1.0",
    "inflected": "^2.0.4",
    "jest": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "jest-junit": "^12.0.0",
    "miragejs": "^0.1.40",
    "mocha": "^8.0.1",
    "moment": "^2.22.2",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.8.1",
    "react-router-dom": "^5.2.0",
    "sinon": "^9.0.2"
  },
  "dependencies": {
    "@folio/handler-stripes-registry": "^1.0.0",
    "@folio/react-intl-safe-html": "^2.0.0",
    "@folio/stripes-erm-components": "^5.0.0",
    "@k-int/stripes-kint-components": "^1.3.0",
    "compose-function": "^3.0.3",
    "final-form": "^4.19.0",
    "final-form-arrays": "^3.0.1",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.0",
    "query-string": "^6.6.0",
    "react-final-form": "^6.4.0",
    "react-final-form-arrays": "^3.1.1",
    "react-xarrows": "1.7.0"
  },
  "peerDependencies": {
    "@folio/stripes": "^7.0.0",
    "moment": "^2.22.2",
    "react": "*",
    "react-dom": "*",
    "react-intl": "^5.8.1",
    "react-query": "^3.9.0",
    "react-router-dom": "^5.2.0"
  }
}
